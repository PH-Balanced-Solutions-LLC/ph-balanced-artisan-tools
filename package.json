{
  "name": "laravel-tools",
  "displayName": "laravel-tools",
  "description": "Tools for generating items with artisan",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "author": "https://github.com/kirikintha",
  "repository": {
    "type": "git",
    "url": "https://github.com/kirikintha/ph-balanced-laravavel-cli"
  },
  "license": "ISC",
  "activationEvents": [],
  "main": "./out/extension.js",
  "icon": "resources/generator.png",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "laravelTools",
        "contents": "Please open a laravel workspace to see the commands. [learn more](https://laravel.com/docs/11.x/artisan)\n Artisan must be present and executable from the root of your workspace"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "laravelToolsContainer",
          "title": "Laravel Tools",
          "icon": "resources/laravel.svg"
        }
      ]
    },
    "views": {
      "laravelToolsContainer": [
        {
          "id": "laravelTools",
          "name": "Laravel Tools"
        }
      ]
    },
    "commands": [
      {
        "command": "laravelTools.refresh",
        "title": "Refresh Laravel Tools",
        "icon": "$(refresh)"
      },
      {
        "command": "laravelTools.make",
        "title": "Run Artisan Make"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "laravelTools.refresh",
          "when": "view == laravelTools",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npx rollup -c rollup.config.mjs",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "rollup": "^4.20.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "vsce": "^2.15.0"
  }
}
